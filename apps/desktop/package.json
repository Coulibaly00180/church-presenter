{
  "name": "@cp/desktop",
  "private": true,
  "version": "0.0.1",
  "main": "out/main/main.js",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "dist:win": "electron-builder install-app-deps && npm run build && electron-builder --win nsis --publish never",
    "preview": "electron-vite preview",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=0",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prisma:generate": "prisma generate",
    "db:migrate:safe": "node scripts/prisma-migrate-safe.mjs",
    "bible:build-offline": "node scripts/build-lsg1910-offline.mjs",
    "postinstall": "prisma generate",
    "audit:high": "npm audit --omit=optional --audit-level=high",
    "test": "vitest run --config vitest.config.ts",
    "test:watch": "vitest --config vitest.config.ts"
  },
  "build": {
    "appId": "com.church.presenter",
    "productName": "Church Presenter",
    "electronVersion": "40.0.0",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**",
      "prisma/**",
      "package.json"
    ],
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**"
    ],
    "extraMetadata": {
      "main": "out/main/main.js"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@fontsource/space-grotesk": "^5.2.10",
    "@prisma/client": "^6.19.2",
    "adm-zip": "^0.5.10",
    "better-sqlite3": "^12.6.2",
    "bible-passage-reference-parser": "^3.2.0",
    "docx": "^9.1.0",
    "mammoth": "^1.6.0",
    "pdfjs-dist": "^4.5.136",
    "prisma": "^6.19.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "electron": "^40.0.0",
    "electron-builder": "^26.7.0",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^14.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
