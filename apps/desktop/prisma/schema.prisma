generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Song {
  id        String      @id @default(cuid())
  title     String
  artist    String?
  album     String?
  year      String?
  language  String?
  tags      String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  blocks    SongBlock[]
}

model SongBlock {
  id        String   @id @default(cuid())
  songId    String
  order     Int
  type      String
  title     String?
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  song      Song     @relation(fields: [songId], references: [id], onDelete: Cascade)

  @@index([songId, order])
  @@unique([songId, order])
}

model ServicePlan {
  id        String      @id @default(cuid())
  date      DateTime    @unique
  title     String?     // ex: "Culte du dimanche"
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  items     ServiceItem[]
}

model ServiceItem {
  id        String      @id @default(cuid())
  planId    String
  order     Int
  kind      String      // "SONG_BLOCK" | "ANNOUNCEMENT_TEXT" | "ANNOUNCEMENT_IMAGE" | "VERSE_MANUAL"
  refId     String?     // ex: songId pour SONG_BLOCK
  refSubId  String?     // ex: blockId pour SONG_BLOCK
  title     String?
  content   String?     // texte annonce / verset / etc
  mediaPath String?     // chemin local image (MVP)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  plan      ServicePlan @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@index([planId, order])
  @@unique([planId, order])
}
